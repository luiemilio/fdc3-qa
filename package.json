		"typescript": "^4.8.4",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.10.0",
		"@types/jest": "^29.5.1",
		"babel-jest": "^29.5.0",
		"eslint-plugin-jest": "^27.2.1",
		"jest-cli": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jest-transform-css": "^6.0.1",
		"ts-jest": "^29.1.0"
	}
}
